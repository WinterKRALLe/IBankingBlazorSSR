<div class="py-5 px-4 rounded-xl grow max-w-sm mx-auto sm:mx-0 bg-skin-muted whitespace-nowrap flex flex-col gap-2 h-fit md:h-auto">
    <div class="flex flex-col items-center justify-center">
        <span>@AccountType</span>
    </div>
    <div class="flex flex-col items-center justify-center gap-2">
        <div class="flex justify-center relative">
            <span class="mr-2">@Currency</span>
            <span class="text-3xl lg:text-4xl font-bold tracking-wider">@Amount</span>
        </div>
        <span class="tracking-wider text-skin-base2 text-sm">@AccountNum</span>
    </div>
    @{
        if (AccountType.Contains("Osobní"))
        {
            <div class="flex justify-between rounded-lg w-full p-2 md:p-6">
                <button class="w-20 h-20 md:w-24 md:h-24 hover:bg-skin-inverted rounded-lg border border-solid border-[#25283a] gap-2 flex flex-col justify-center items-center">
                    <svg class="fill-skin-base" xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 256 256">
                        <path d="M227.32,28.68a16,16,0,0,0-15.66-4.08l-.15,0L19.57,82.84a16,16,0,0,0-2.42,29.84l85.62,40.55,40.55,85.62A15.86,15.86,0,0,0,157.74,248q.69,0,1.38-.06a15.88,15.88,0,0,0,14-11.51l58.2-191.94c0-.05,0-.1,0-.15A16,16,0,0,0,227.32,28.68ZM157.83,231.85l-.05.14L118.42,148.9l47.24-47.25a8,8,0,0,0-11.31-11.31L107.1,137.58,24,98.22l.14,0L216,40Z"></path>
                    </svg>
                    <span class="text-sm">Platba</span>
                </button>
                <button class="w-20 h-20 md:w-24 md:h-24 hover:bg-skin-inverted rounded-lg border border-solid border-[#25283a]  gap-2 flex flex-col justify-center items-center">
                    <svg class="fill-skin-base" xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 256 256">
                        <path d="M128,24A104,104,0,1,0,232,128,104.11,104.11,0,0,0,128,24Zm0,192a88,88,0,1,1,88-88A88.1,88.1,0,0,1,128,216Zm64-88a8,8,0,0,1-8,8H128a8,8,0,0,1-8-8V72a8,8,0,0,1,16,0v48h48A8,8,0,0,1,192,128Z"></path>
                    </svg>
                    <span class="text-sm">Blokace</span>
                </button>
                <button class="w-20 h-20 md:w-24 md:h-24 hover:bg-skin-inverted rounded-lg border border-solid border-[#25283a]  gap-2 flex flex-col justify-center items-center">
                    <svg class="fill-skin-base" xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 256 256">
                        <path d="M80,64a8,8,0,0,1,8-8H216a8,8,0,0,1,0,16H88A8,8,0,0,1,80,64Zm136,56H88a8,8,0,0,0,0,16H216a8,8,0,0,0,0-16Zm0,64H88a8,8,0,0,0,0,16H216a8,8,0,0,0,0-16ZM44,52A12,12,0,1,0,56,64,12,12,0,0,0,44,52Zm0,64a12,12,0,1,0,12,12A12,12,0,0,0,44,116Zm0,64a12,12,0,1,0,12,12A12,12,0,0,0,44,180Z"></path>
                    </svg>
                    <span class="text-sm">Detail</span>
                </button>
            </div>
        }
        else
        {
            <button class="flex flex-col justify-center hover:bg-skin-inverted gap-2 rounded-lg w-full p-2 md:p-6">
                <div class="flex justify-between">
                    <span>Cílová částka</span>
                    <span>2 000 000 Kč</span>
                </div>
                <div class="h-px bg-[#25283a] w-full"></div>
                <div class="flex justify-between items-center gap-8">
                    <span>Uzavření smlouvy</span>
                    <span>30. 2. 2016</span>
                </div>
                <div class="h-px bg-[#25283a] w-full"></div>
                <div class="flex gap-2 items-center">
                    <svg class="fill-skin-base" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 256 256">
                        <path d="M128,24A104,104,0,1,0,232,128,104.11,104.11,0,0,0,128,24Zm0,192a88,88,0,1,1,88-88A88.1,88.1,0,0,1,128,216Zm16-40a8,8,0,0,1-8,8,16,16,0,0,1-16-16V128a8,8,0,0,1,0-16,16,16,0,0,1,16,16v40A8,8,0,0,1,144,176ZM112,84a12,12,0,1,1,12,12A12,12,0,0,1,112,84Z"></path>
                    </svg>
                    <span class="text-sm">Klikněte pro podrobnosti</span>
                </div>
            </button>
        }
    }
</div>

@code {

    [Parameter]
    public string AccountType { get; set; } = string.Empty;

    [Parameter]
    public string AccountNum { get; set; } = string.Empty;

    [Parameter]
    public string Currency { get; set; } = string.Empty;

    [Parameter]
    public string Amount { get; set; } = string.Empty;
}